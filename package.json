{
  "name": "@letsandeepio/battleship",
  "version": "1.0.1",
  "description": "A simple battleship game written in Node.js",
  "preferGlobal": true,
  "bin": {
    "battleship": "bin/battleship"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest --watch",
    "test:coverage": "jest --collectCoverage",
    "lint": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/letsandeepio/battleship.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/letsandeepio/battleship/issues"
  },
  "homepage": "https://github.com/letsandeepio/battleship#readme",
  "devDependencies": {
    "eslint": "^7.12.1",
    "jest": "^26.6.1"
  },
  "jest": {
    "collectCoverage": false,
    "coverageDirectory": "./.reports",
    "verbose": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/.reports/**",
      "!.eslintrc.js"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "figlet": "^1.5.0",
    "prompts": "^2.4.0"
  },
  "eslintIgnore": [
    "*.test.js"
  ]
}